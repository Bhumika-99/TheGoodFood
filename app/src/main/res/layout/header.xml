<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/headlogo"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/headlogo"
        android:text="Emailaddress"
        android:id="@+id/heademail"
        android:textColor="@android:color/black"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:textAlignment="center"
        android:textSize="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/heademail"
        android:textColor="@android:color/black"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:text="Emailaddress"
        android:id="@+id/headname"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textSize="20dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/headname"
        android:layout_marginTop="10dp"
        android:background="@drawable/viewround" />
</RelativeLayout>